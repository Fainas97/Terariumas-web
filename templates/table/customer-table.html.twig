<table class="table table-striped table-sm" id="users-table">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Type</th>
        <th>Created</th>
        <th>Updated</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.admin ? 'Admin' : 'Client' }}</td>
            <td>{{ user.createdDate|date('Y-m-d h:i:s') }}</td>
            <td>{{ user.updateDate|date('Y-m-d h:i:s') }}</td>
            <td class="text-center">
                <a class="black" href="{{ path('edit_user', { 'id' : user.id }) }}">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td class="text-center">
                <a data-record-id="{{ user.id }}" data-record-title="{{ user.name }}"
                   data-url="user" data-name="users-table"
                   data-toggle="modal" data-target="#confirm-delete">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>