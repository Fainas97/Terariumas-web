{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-xs-6">
            <h2>Users management page</h2>
        </div>
        <div class="col-md-6 col-xs-6">
            <a class="btn grey float-right" href="{{ path('app_register') }}">Create new user</a>
        </div>
    </div>
    {% include 'modal/confirm.html.twig' %}
    {% include 'modal/success-modal.html.twig' %}
    <div class="table-responsive">
        <table class="table table-striped table-sm" id="usersTable">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Type</th>
                <th>Created</th>
                <th>Updated</th>
                <th class="text-center">Edit</th>
                <th class="text-center">Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.admin ? 'Admin' : 'Client' }}</td>
                    <td>{{ user.createdDate|date('Y-m-d h:i:s') }}</td>
                    <td>{{ user.updateDate|date('Y-m-d h:i:s') }}</td>
                    <td class="text-center">
                        <a id="edit-{{ user.id }}">
                            <span data-feather="settings"></span>
                        </a>
                    </td>
                    <td class="text-center">
                        <a data-record-id="{{ user.id }}" data-record-title="{{ user.name }}"
                           data-toggle="modal" data-target="#confirm-delete">
                            <span data-feather="trash-2"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        feather.replace()
    </script>
{% endblock %}
